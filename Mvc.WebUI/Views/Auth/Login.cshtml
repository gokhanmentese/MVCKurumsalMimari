<body class="page-body login-page login-form-fall">

    <div style="min-height:100%; position:relative;">

        @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @*@Html.ValidationSummary()*@
            @*<form id="form1" novalidate="novalidate">*@

            <div class="container">
                <div style="padding:10px; padding-bottom:30px;">
                    @*@Html.ValidationSummary(true, "Kullanıcı Bilgileriniz eksik yada hatalı kontrol ediniz!!Kullanıcı bulunamadı")*@

                    <div class="login-container">
                        <div class="login-header login-caret">
                            <div class="login-content">

                                @*<a href="index.html" class="logo">
                                        <img src="images/logo@2x.png" width="120" alt="">
                                    </a>
                                    <p class="description">Dear user, log in to access the admin area!</p>*@
                                <!-- progress bar indicator -->

                                <img src="~/neon/assets/images/stb/stb2.png" style="width:200px; height:200px;" />
                                <div class="login-progressbar-indicator">
                                    <h3>0%</h3>
                                    <span>logging in...</span>
                                </div>
                            </div>
                        </div>

                        <div class="login-progressbar">
                            <div></div>
                        </div>

                        <div class="login-form" style="background-color: #ffffff !important;">

                            <div class="login-content">

                                <div class="form-login-error">
                                    <h3>Invalid login</h3>
                                    <p>Enter as login and password.</p>
                                </div>

                                <div id="btnLoginButtons" class="row">
                                    <div class="form-group">
                                        <button class="btn-form  btn-warning mat-button-toggle-group" color="accent" id="btnFormLogin" name="fontStyle" type="button">
                                            <span class="mat-button-wrapper">
                                                Kullanıcı Bilgileri ile Giriş
                                            </span>
                                            <div class="mat-button-ripple mat-ripple" matripple=""></div>
                                            <div class="mat-button-focus-overlay"></div>
                                        </button>
                                    </div>

                                    <div class="form-group">
                                        <button class="eDevletButon btn-form mt-28 mat-raised-button mat-accent" color="accent" name="fontStyle" type="button">
                                            <span class="mat-button-wrapper">
                                                <img alt="eDevlet-logo-turuncu" class="eDevletIMG" src="~/images/eDevletLogo.png">e-Devlet ile Giriş
                                            </span>
                                            <div class="mat-button-ripple mat-ripple" matripple=""></div>
                                            <div class="mat-button-focus-overlay"></div>
                                        </button>
                                    </div>
                                </div>

                                <div id="form_login" style="display:none;">
                                    <div class="form-group">

                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="entypo-user"></i>
                                            </div>
                                            @Html.TextBoxFor(m => m.IdentityNumber, new { @class = "form-control input-lg", placeholder = "TC Kimlik Numarası" })
                                            @Html.ValidationMessageFor(m => m.IdentityNumber)
                                        </div>

                                    </div>

                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="entypo-key"></i>
                                            </div>

                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", placeholder = "Şifre" })
                                            @Html.ValidationMessageFor(m => m.Password)
                                        </div>

                                    </div>

                                    <div class="form-group">
                                        @*<input type="submit" value="Giriş" style="background-color: #B68A33; color:#ffffff; width:100px;" />*@
                                        <button type="submit" value="Giriş" class="btn btn-primary btn-block btn-login">
                                            <i class="entypo-login"></i>
                                            Giriş
                                        </button>

                                    </div>
                                </div>

                                <hr />
                                <!-- Remind Passowrd -->
                                <div class="form-group" id="formFooter">
                                    @Html.ActionLink("Şifremi Unuttum", "ForgotPassword", "Auth")
                                    @*<a class="underlineHover" href="#">Şifremi Unuttum</a>*@
                                </div>

                                <div class="form-group" id="btnBackLogin" style="display:none;">
                                    @Html.ActionLink("Geri Dön", "Login", "Auth")
                                    @*<br>
                                    <a href="#">ToS</a>  - <a href="#">Privacy Policy</a>*@
                                </div>
                            </div>

                        </div>


                    </div>

                </div>

                <div class="container" style="position:absolute; background-color:#B68A33 !important; height:45px;  color:white; bottom:0; ">
                    <div class="row" style="margin-top:15px;">
                        <div class="col-md-4" style="height:20px;">
                            T.C. Sanayi ve Teknoloji Bakanlığı
                        </div>
                        <div class="col-md-4">

                        </div>
                        <div class="col-md-4" style="text-align:right; padding-right:10px;">
                            &copy; 2020  v1.0.00
                        </div>
                    </div>
                </div>
                <!-- Footer -->
                <footer class="main" style="position:absolute; background-color:#B68A33 !important; height:45px;  color:white; bottom:0; text-align:center;">
                </footer>
            </div>

            @*</form>*@
        }
    </div>

