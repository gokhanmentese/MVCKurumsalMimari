@model Mvc.WebUI.ViewModel.RegisterViewModel
@{
    ViewBag.Title = "Yeni Kullanıcı";
}

@await Component.InvokeAsync("PageTitle", Model.PageTitleOptions)

@using (Html.BeginForm("Register", "Auth", FormMethod.Post))
{
    <div class="form-body">
        <div class="form-group row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.IdentityNumber, new { @class = "control-label" })
            </div>
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.IdentityNumber, new { @class = "form-control", placeholder = "TC Kimlik Numarası" })
            </div>
            <div class="col-sm-6">
                @Html.ValidationMessageFor(m => m.IdentityNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
            </div>
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Ad" })
            </div>
            <div class="col-sm-6">
                @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.LastName, new { @class = "col-form-label" })
            </div>
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Soyadı" })
            </div>
            <div class="col-sm-6">
                @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2">
                @Html.LabelFor(m => m.Email, new { @class = "col-form-label" })
            </div>
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "E-posta" })
            </div>
            <div class="col-sm-6">
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-actions">
